<h1><%= @quote.name %></h1>

<p class="lead"> <%= @quote.description %> </p>

<p>
  <b>Cost per hour:</b>
  <%= @quote.cost_per_hour %>
</p>

<p>
  <b>Hours per day:</b>
  <%= @quote.hours_per_day %>
</p>

<table class="table table-hover table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Design time</th>
    <th>Programming time</th>
    <th>Is extra</th>
    <th>Is feature</th>
    <th></th>
    <th></th>
  </tr>

<% @quote.use_cases.each do |use_case| %>
  <tr>
    <td><%= use_case.name %></td>
    <td><%= use_case.description %></td>
    <td><%= use_case.design_time %></td>
    <td><%= use_case.programming_time %></td>
    <td><%= use_case.is_extra %></td>
    <td><%= use_case.is_feature %></td>
    <td><%= link_to 'Show', quote_use_case_path(use_case.quote.id,use_case.id) %></td>
    <td><%= link_to 'Edit', edit_quote_use_case_path(use_case.quote.id,use_case.id) %></td>
    <td><%= link_to 'Destroy', quote_use_case_path(use_case.quote.id,use_case.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<%= link_to 'Edit', edit_quote_path(@quote) %> |
<%= link_to 'Back', quotes_path %>
